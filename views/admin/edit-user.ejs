<% include('../layouts/header.ejs') %>

<link rel="stylesheet" href="/admin/edit-user.css">

<h1>Edit User</h1>

<form action="" method="post">

     <input type="name" name="name" placeholder="Enter Name" value="<%= user.name %>" required>
     <br><br>
     <input type="email" name="email" placeholder="Enter Email" value="<%= user.email %>" required>
     <br><br>
     <input type="text" name="mobile" placeholder="Enter Mobile" value="<%= user.mobile %>" required>
     <br><br>
     <label> Verified </label>
     <input type="radio" name="Verify" value="1">
     <label> Unverified </label>
     <input type="radio" name="Verify" value="0">
     <br><br>
     <input type="hidden" name="id" value="<%= user._id %>">
     <input type="submit" name="Update User" >
    

</form>

<a href="/admin/">Go Dashboard</a>

