<% include('../layouts/header.ejs') %>

<link rel="stylesheet" href="/admin/dashboard.css">

<h1>Dashboard</h1>

<a href="/admin/new-user">Add New User</a>
<br><br>

<form action="/admin/dashboard-Search" method="get">
  <input type="text" name="search" placeholder="Search by name...">
  <button type="submit">Search</button>
</form>

<table width="50%">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Verified</th>
    <th>Action</th>
  </tr>

   <%
      if(users.length > 0){
        for(let i=0;i<users.length;i++){
           %>
           <tr>
              <td><%= users[i].name %></td>
              <td><%= users[i].email %></td>
              <td><%= users[i].mobile %></td>
              <td><%
                if(users[i].is_verified == 1){
                    %>
                     <p class="not-verified">Not Verified</p>
                    <%
                }else{
                    %>
                     <p class="verified">Verified</p>
                    <%
                }
                  %></td>
                  <th>
                    <a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a>
                    <a href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a>
                  </th>
           </tr>
           <%
        }

      }else{
        %>
         <tr>
            <td colspan="5">Users Not Found</td>


         </tr>
        <%
      }
   %>

</table>
<br>

<a href="/admin/home">Go to Home</a>

<% include('../layouts/footer.ejs') %>